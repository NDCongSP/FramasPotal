@model FramasVietNam.Models.IndexViewModel
@using FramasVietNam.Common
@{
    ViewBag.Title = "Manage Language";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var ds_Language = (List<FramasVietNam.Models.Menu.sys_Language>)ViewBag.ds_Language;
    var HasPassword = ViewBag.HasPassword;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="fa fa-fw fa-mail-reply" href="@Url.Action("Index","Home")"></a>
            @Language.label("ChangeYourAccountSettings")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @Language.label("Home")</a></li>
            <li class="active">@Language.label("Manager")</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="min-height:906px; margin: 2px;">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                @using (Html.BeginForm("Index", "Language", FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "margin-left:15px; margin-right:15px" }))
                {
                    //begin change pasword
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="box box-solid">

                        <div class="box-header with-border">
                            <h3 class="box-title">@Language.label("ChangeYourAccountSettings")</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="box-group" id="accordion">
                                <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
                                <div class="panel box box-primary">
                                    @if (Model.HasPassword)
                                    {
                                        <div class="box-header with-border">
                                            <h4 class="box-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" class="collapsed">
                                                    @Language.label("Password"):
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapseOne" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                            <div class="box-body">
                                                @Html.ActionLink(Language.label("ChangePassword"), "ChangePassword", new { @class = "form-control" })
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="box-header with-border">
                                            <h4 class="box-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne_" aria-expanded="false" class="collapsed">
                                                    @Language.label("Account"):
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapseOne_" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                            <div class="box-body">
                                                @Html.ActionLink(Language.label("Create"), "SetPassword", new { @class = "form-control" })
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="panel box box-danger">
                                    <div class="box-header with-border">
                                        <h4 class="box-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" class="collapsed" aria-expanded="false">
                                                @Language.label("Email"):
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseTwo" class="panel-collapse collapse" aria-expanded="false">
                                        <div class="box-body">
                                            @Html.ActionLink(Language.label("Update") + " Email", "ChangeEmail")
                                        </div>
                                    </div>
                                </div>
                                <div class="panel box box-success">
                                    <div class="box-header with-border">
                                        <h4 class="box-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" class="collapsed" aria-expanded="false">
                                                @Language.label("Language"):
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseThree" class="panel-collapse collapse" aria-expanded="false">
                                        <div class="box-body">
                                            @Html.ActionLink(Language.label("ChangeLanguage"), "Index", "Language")
                                        </div>
                                    </div>
                                </div>

                                <div class="panel box box-warning">
                                    <div class="box-header with-border">
                                        <h4 class="box-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour" class="collapsed" aria-expanded="false">
                                                @Language.label("UserInterface"):
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseFour" class="panel-collapse collapse" aria-expanded="false">
                                        <div class="box-body">
                                            <a class="btn btn-app" href="@Url.Action("General", "UIElement")">
                                                <i class="fa fa-dashboard"></i> @Language.label("General")
                                            </a>
                                            <a class="btn btn-app" href="@Url.Action("Icon", "UIElement")">
                                                <i class="fa fa-bullhorn"></i> @Language.label("Icon")
                                            </a>
                                            <a class="btn btn-app" href="@Url.Action("Button", "UIElement")">
                                                <i class="fa fa-play"></i> @Language.label("Button")
                                            </a>
                                            <a class="btn btn-app" href="@Url.Action("Slider", "UIElement")">
                                                <i class="fa fa-sliders"></i> @Language.label("Slider")
                                            </a>
                                            <a class="btn btn-app" href="@Url.Action("Timeline", "UIElement")">
                                                <i class="fa fa-clock-o"></i> @Language.label("Timeline")
                                            </a>
                                            <a class="btn btn-app" href="@Url.Action("Modal", "UIElement")">
                                                <i class="fa fa-clone"></i> @Language.label("Modal")
                                            </a>
                                            @*@Html.ActionLink(Language.label("General"), "General", "UIElement")  -
                                            @Html.ActionLink(Language.label("Icon"), "Icon", "UIElement")  -
                                            @Html.ActionLink(Language.label("Button"), "Button", "UIElement")  -
                                            @Html.ActionLink(Language.label("Slider"), "Slider", "UIElement")  -
                                            @Html.ActionLink(Language.label("Timeline"), "Timeline", "UIElement")  -
                                            @Html.ActionLink(Language.label("Modal"), "Modal", "UIElement")*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    
                }
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>