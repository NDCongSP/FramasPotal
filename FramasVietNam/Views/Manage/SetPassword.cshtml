@model FramasVietNam.Models.ChangePasswordViewModel
@using FramasVietNam.Common
@{
    ViewBag.Title = "Create Password";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var ds_Language = (List<FramasVietNam.Models.Menu.sys_Language>)ViewBag.ds_Language;
    var HasPassword = ViewBag.HasPassword;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="fa fa-fw fa-mail-reply" href="@Url.Action("Index","Manage")"></a>
            @Language.label("CreatePassword")
            <small>
                @Language.label("CreatePasswordDescription")
            </small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @Language.label("Home")</a></li>
            <li class="active">@Language.label("CreatePassword")</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="min-height:906px">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "margin-left:15px; margin-right:15px" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-2 control-label" style="max-width:200px">@Language.label("NewPassword"):</div>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label" style="max-width:200px">@Language.label("ConfirmnNewPassword"):</div>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label" style="max-width:200px"></div>
                        <div class="col-md-10">
                            <input type="submit" value=@Language.label("Save") class="btn btn-block btn-primary btn-sm" style="max-width:100px" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>