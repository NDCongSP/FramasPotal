@using FramasVietNam.Common
@model FramasVietNam.Models.Menu.Department
@{
    ViewData["Title"] = "FVN";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                alert("@Html.Raw(ViewBag.Message)");
            };
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="fa fa-fw fa-mail-reply" href="@Url.Action("Dept","Administrator")"></a>
            @Language.label("Edit")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @Language.label("Department")</a></li>
            <li class="active">@Language.label("Edit")</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="min-height:906px; margin:2px">
            <!-- TO DO List -->
            <div class="box box-primary">
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("DeptEdit", "Administrator", FormMethod.Post))
                    {
                        <ul class="todo-list">
                            <li>
                                @Language.label("Code") (*)
                                @Html.TextBox("Code", Model.Code, new { @class = "form-control", @placeholder = "Code", @readonly = "true" })
                            </li>
                            <li>
                                @Language.label("Name") (*)
                                @Html.TextBox("Name", Model.Name, new { @class = "form-control", @placeholder = "Name" })
                            </li>
                            <li>
                                @Html.ButtonRoles("Save", "Dept", "Administrator", Language.label("Save"), new { @class = "btn btn-success btn-sm" })
                            </li>
                        </ul>
                    }
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </section>
    <!-- /.content -->
</div>
