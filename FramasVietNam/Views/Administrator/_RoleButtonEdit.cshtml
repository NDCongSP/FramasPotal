@using FramasVietNam.Common

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Chỉnh sửa</h4>
        </div>
        <div class="modal-body">

            @if (ViewBag.Role != null)
            {
                <div class="form-group">
                    @Language.label("Roles")<code>(*)</code>
                    <select class="form-control select2" style="width: 100%;" data-placeholder="Select a role" id="select_Role">
                        @foreach (var item in ViewBag.Role)
                        {
                            <option @(item.Id.Trim() == Model.RoleID.Trim() ? "selected" : "") value="@item.Id">@item.Name </option>
                        }
                    </select>

                </div>
            }
            @if (ViewBag.Button != null)
            {
                <div class="form-group">
                    @Language.label("Button")<code>(*)</code>
                    <select class="form-control select2" id="select_Button">
                        @foreach (var item in ViewBag.Button)
                        {
                            <option @(item.Id.Trim() == Model.ButtonID.Trim() ? "selected" : "") value="@item.Id">@item.Name </option>
                        }
                    </select>
                </div>
            }
            <div class="form-group">
                @Language.label("Description")
                <textarea class="form-control" id="description"></textarea>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
            @*<button type="button" class="btn btn-success" onclick="ButtonRoleUpdate()">Save changes</button>*@
            @Html.ButtonRoles("Save", "RoleButton", "Administrator", @Language.label("Save"), new { @class = "btn btn-success", @onclick = "ButtonRoleUpdate()" })
        </div>
    </div>
}

<link rel="stylesheet" href="~/Content/adminlte/plugins/iCheck/square/blue.css">
<style type="text/css">
    .alert {
        padding: 8px 35px !important;
        margin-bottom: 0px !important;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .error {
        background-color: #fbff00;
        border-color: #ff0000;
    }
</style>
<!-- Select2 -->
<style type="text/css">
    .select2-container--default .select2-selection--single {
        border: 1px solid #d2d6de;
        border-radius: 0;
        padding: 6px 12px;
        height: 34px;
    }
</style>
<script src="~/Content/adminlte/plugins/iCheck/icheck.min.js"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' /* optional */
        });
        $('.select2').select2();
    });
</script>

