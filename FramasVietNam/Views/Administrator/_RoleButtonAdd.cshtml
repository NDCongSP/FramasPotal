
@using FramasVietNam.Common
<div class="modal fade" id="AddRoleButton">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">@Language.label("Add")</h4>
            </div>
            <div class="modal-body">
                @if (ViewBag.Role != null)
                {
                    <div class="form-group">
                        @Language.label("Roles")<code>(*)</code>
                        <select class="form-control" id="select_Roles" style="width: 100%;" data-placeholder="@Language.label("PleaseChoose") a roles">
                            @foreach (var item in ViewBag.Role)
                            {
                                <option value="@item.Id">@item.Name </option>
                            }
                        </select>
                    </div>
                }
                @if (ViewBag.Button !=null)
                {
                    <div class="form-group">
                        @Language.label("Module")<code>(*)</code>
                        <select class="form-control select2" style="width: 100%;" id="select_Buttons" data-placeholder="@Language.label("PleaseChoose") a button">
                            @foreach (var item in ViewBag.Button)
                            {
                                <option value="@item.Id">@item.Name </option>
                            }
                        </select>
                    </div>
                }
                <div class="form-group">
                    @Language.label("Description")
                    <textarea class="form-control" id="description"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                @Html.ActionLinkRole("Save", "RoleButton", "Administrator", Language.label("Save"), "RoleButton", "Administrator", new { @class = "btn btn-success", onclick = "RoleButtonAdd()" })
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/Content/adminlte/dist/css/AdminLTE.min.css">
<link rel="stylesheet" href="~/Content/adminlte/plugins/iCheck/square/blue.css">
<style type="text/css">
    .alert {
        padding: 8px 35px !important;
        margin-bottom: 0px !important;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .error {
        background-color: #fbff00;
        border-color: #ff0000;
    }
</style>
<!-- Select2 -->
<style type="text/css">
    .select2-container--default .select2-selection--single {
        border: 1px solid #d2d6de;
        border-radius: 0;
        padding: 6px 12px;
        height: 34px;
    }
</style>
<script src="~/Content/adminlte/plugins/iCheck/icheck.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' /* optional */
        });
        $('.select2').select2();
    });
</script>
