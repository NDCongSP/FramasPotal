@using FramasVietNam.Common
@{
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var lstSlider = (List<string>)ViewBag.lstSlider;
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                alert("@Html.Raw(ViewBag.Message)");
            };
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="fa fa-fw fa-mail-reply" href="@Url.Action("Slither","Home")"></a>
            @Language.label("Update")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Slider</a></li>
            <li class="active">@Language.label("Update")</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="min-height:906px; margin:2px">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="fa fa-cloud-upload"></i>
                    <h3 class="box-title">@Language.label("Upload")</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("SlitherUpd", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <ul class="todo-list">
                        <li class="file-upload-container">
                            <div>
                                <label>
                                    <a data-fancybox="gallery" href="/Content/adminlte/dist/img/no_image.jpg" class="lightbox-preview" rel="group">
                                        <img src="/Content/adminlte/dist/img/no_image.jpg" id="img_Avatar" alt="avatar" class="default-image img-polaroid avatar file-upload-preview">
                                    </a>
                                    <br>
                                    <input preview="file-upload-preview" type="file" data-width="1000" id="file" data-height="1000" class="skip file-upload-control" name="file" accept="image/*">
                                    <input type="hidden" name="file" value="/Content/adminlte/dist/img/no_image.jpg" />
                                    <br>
                                    <span class="help-block"> Ảnh hỗ trợ: *.jpg, *.jpeg, *.gif, *.png</span>
                                </label>
                                <span class="btn file-upload-thumb-remove">X</span>
                            </div>
                        </li>
                        <li>
                            @Html.ButtonRoles("Save", "Slither", "Home", Language.label("Save"), new { @class = "btn btn-success btn-sm", type="submit" })
                        </li>
                    </ul>
                    }
                </div>
            </div>
