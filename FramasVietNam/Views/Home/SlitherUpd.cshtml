                <div class="box-header">
                    <i class="fa fa-plus-circle"></i>
                    <h3 class="box-title">@Language.label("Add")</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("SlitherUpd", "Home", FormMethod.Post))
                    {
                        <ul class="todo-list">
                            <li>
                                @Language.label("Image") (*)
                                <br />
                                <select class="form-control select2" style="width: 100%;" data-placeholder="Select a Slider" id="txtSlider" name="txtSlider">
                                    <option value="">Select a Slider</option>
                                    @foreach (var item in lstSlider)
                                    {
                                        <option value="@item" id="@item">@item</option>
                                    }
                                </select>
                            </li>
                            <li>
                                <input class="btn btn-primary btn-sm" type="submit" value="@Language.label("Save")" />
                            </li>
                        </ul>
                    }
                </div>
            </div>*@
        </div>
    </section>
    <!-- /.content -->
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".select2").select2();
        });
    </script>

    <!-- Upload images -->
    <script src="~/Content/adminlte/plugins/upload/fullobf.js"></script>
    <script src="~/Content/adminlte/plugins/upload/dataconfig.js"></script>
}