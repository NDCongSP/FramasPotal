@using FramasVietNam.Common
@model FramasVietNam.Models.Menu.EventList
@{
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    DateTime DateNow = (DateTime)ViewBag.DateNow;
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                alert("@Html.Raw(ViewBag.Message)");
            };
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="fa fa-fw fa-mail-reply" href="@Url.Action("EventList","Home")"></a>
            @Language.label("Edit")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @Language.label("EventList")</a></li>
            <li class="active">@Language.label("Edit")</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="min-height:906px; margin:2px">
            @using (Html.BeginForm("EventListEdit", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-3 col-xs-6">
                        <div style="margin-bottom:10px">
                            @Html.ButtonRoles("Save", "EventList", "Home", Language.label("Save"), new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
                //Data Parent
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>
                        <h3 class="box-title"></h3>
                    </div>
                    <div class="box-body">
                        <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
                        <ul class="todo-list">
                            <li>
                                @Language.label("EventDay"): (*)
                                <input name="EventDay" type='text' class="form-control" id='EventDay' placeholder="@Language.label("EventDay")" value="@mFunction.ToDateTime(Model.EventDay)" />
                            </li>
                            <li>
                                @Language.label("Title") 1 EG: (*)
                                @Html.TextBox("Title1_EG", @Model.Title1_EG, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 1 GR: (*)
                                @Html.TextBox("Title1_GR", @Model.Title1_GR, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 1 VN: (*)
                                @Html.TextBox("Title1_VN", @Model.Title1_VN, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 2 EG: (*)
                                @Html.TextBox("Title2_EG", @Model.Title2_EG, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 2 GR: (*)
                                @Html.TextBox("Title2_GR", @Model.Title2_GR, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 2 VN: (*)
                                @Html.TextBox("Title2_VN", @Model.Title2_VN, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 3 EG: (*)
                                @Html.TextBox("Title3_EG", @Model.Title3_EG, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 3 GR: (*)
                                @Html.TextBox("Title3_GR", @Model.Title3_GR, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Title") 3 VN: (*)
                                @Html.TextBox("Title3_VN", @Model.Title3_VN, new { @class = "form-control" })
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </section>
    <!-- /.content -->
</div>


<script type="text/javascript">
    $(function () {
        $('#EventDay').datetimepicker({
            format: 'MM/DD/YYYY HH:mm a',
        });
    });
</script>


