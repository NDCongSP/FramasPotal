@using FramasVietNam.Common
@{
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var strTitle = (string)ViewBag.strTitle;
    var strContent = (string)ViewBag.strContent;
    var stridLanguage = (string)ViewBag.stridLanguage;
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                alert("@Html.Raw(ViewBag.Message)");
            };
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="fa fa-fw fa-mail-reply" href="@Url.Action("ShortNews","Home")"></a>
            @Language.label("Update")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @Language.label("ShortNews")</a></li>
            <li class="active">@Language.label("Update")</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="min-height:906px; margin:2px">
            @using (Html.BeginForm("ShortNewsUpd", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-3 col-xs-6">
                        <div style="margin-bottom:10px">
                            @Html.ButtonRoles("Save", "ShortNews", "Home", Language.label("Save"), new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
                <input type="hidden" id="stridLanguage" name="stridLanguage" value="@stridLanguage">
                // Data Parent
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>
                        <h3 class="box-title"></h3>
                    </div>
                    <div class="box-body">
                        <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
                        <ul class="todo-list">
                            <li>
                                @Language.label("Title"):
                                @Html.TextBox("txtTitle", @strTitle, new { @class = "form-control" })
                            </li>
                            <li>
                                @Language.label("Content"):
                                <form>
                                    <textarea id="txtContent" name="txtContent" rows="10" cols="80">
                                       @strContent
                                    </textarea>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </section>
    <!-- /.content -->
</div>

@section Scripts{
    <!-- CK Editor -->
    <script src="~/Content/adminlte/components/ckeditor/ckeditor.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/Content/adminlte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script>
        $(function () {
            CKEDITOR.replace('txtContent')
            $('.textarea').wysihtml5()
        })
    </script>
}