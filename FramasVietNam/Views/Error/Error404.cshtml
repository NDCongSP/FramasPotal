@using FramasVietNam.Common
@{
    ViewData["Title"] = "FVN";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <div class="error-page">
            <h2 class="headline text-red">404</h2>
            <div class="error-content">
                <h3><i class="fa fa-warning text-red"></i> @Language.label("OopsSomethingWentWrong").</h3>
                <p>
                    @Language.label("WeWillWorkOnFixingThatRightAway").
                    @Language.label("MeanwhileYouMayReturnToHomeOrTryUsingTheSearchForm").
                    <a href="@Url.Action("Index","Home")">@Language.label("GoTo") @Language.label("Home")</a>
                </p>
                <form class="search-form">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" name="submit" class="btn btn-danger btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.input-group -->
                </form>
            </div>
        </div>
        <!-- /.error-page -->
    </section>
    <!-- /.content -->
</div>