@using FramasVietNam.Common
@model FramasVietNam.Models.OEEMS.tblSize
    @{
        ViewData["Title"] = "FVN";
        Layout = "~/Views/Shared/_Adminlte.cshtml";
    }

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                alert("@Html.Raw(ViewBag.Message)");
            };
        </script>
    }

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                <a class="fa fa-fw fa-mail-reply" href="@Url.Action("TblSize","OEEMSList")"></a>
                @Language.label("Edit")
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Size</a></li>
                <li class="active">@Language.label("Edit")</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row" style="min-height:906px; margin:2px">
                <!-- TO DO List -->
                <div class="box box-primary">
                    <!-- /.box-header -->
                    <div class="box-body">
                        @using (Html.BeginForm("TblSizeEdit", "OEEMSList", FormMethod.Post))
                        {
                            <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
                            <ul class="todo-list">
                                +@Language.label("Edit")
                                <li>
                                    @Language.label("Code")
                                    @Html.TextBoxFor(m => Model.SizeID, new { @class = "form-control", @placeholder = Language.label("Code"), @readonly = "true" })
                                </li>

                                <li>
                                    @Language.label("Name")
                                    @Html.TextBoxFor(m => Model.SizeName, new { @class = "form-control", @placeholder = "Name" })
                                </li>

                                <li>
                                    @Html.ButtonRoles("Save", "TblSize", "OEEMSList", Language.label("Save"), new { @class = "btn btn-success btn-sm" })
                                </li>
                            </ul>
                        }
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </section>
        <!-- /.content -->
    </div>
