@using FramasVietNam.Common
@using Microsoft.AspNet.Identity
<header class="main-header">
    <div style="width:100%; position: fixed; ">
        <!-- Logo -->
        <a href="@Url.Action("MealOrderFingerM2","MealControl")" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>F</b>VN</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Framas</b>VietNam</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">

                    <!-- Messages: style can be found in dropdown.less-->
                    <li class="dropdown messages-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-envelope-o"></i>
                            <span class="label label-success"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">@Language.label("Nothing")</li>
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu">
                                    <li>
                                        <!-- start message -->
                                        <a href="#">
                                            <div class="pull-left">
                                                <img src="~/Content/adminlte/dist/img/logo.jpg" class="img-circle" alt="User Image">
                                            </div>
                                            <h4>
                                                @Language.label("Administrator")
                                                <small><i class="fa fa-clock-o"></i>@Language.label("Nothing")</small>
                                            </h4>
                                            <p>@Language.label("Nothing")</p>
                                        </a>
                                    </li>
                                    <!-- end message -->
                                </ul>
                            </li>
                            <li class="footer"><a href="#">@Language.label("ViewAll")</a></li>
                        </ul>
                    </li>
                    <!-- Notifications: style can be found in dropdown.less -->
                    <li class="dropdown notifications-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="label label-warning"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">@Language.label("Nothing")</li>
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu">
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-users text-aqua"></i> @Language.label("Nothing")
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="footer"><a href="#">@Language.label("ViewAll")</a></li>
                        </ul>
                    </li>
                    <!-- Tasks: style can be found in dropdown.less -->
                    <li class="dropdown tasks-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-flag-o"></i>
                            <span class="label label-danger"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">@Language.label("Complete")</li>
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu">
                                    <!-- end task item -->
                                    <li>
                                        <!-- Task item -->
                                        <a href="#">
                                            <h3>
                                                @Language.label("Nothing")
                                                <small class="pull-right">0%</small>
                                            </h3>
                                            <div class="progress xs">
                                                <div class="progress-bar progress-bar-red" style="width: 1%" role="progressbar"
                                                     aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                                                    <span class="sr-only">0% @Language.label("Complete")</span>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <!-- end task item -->
                                </ul>
                            </li>
                            <li class="footer">
                                <a href="#">@Language.label("ViewAll")</a>
                            </li>
                        </ul>
                    </li>
                    <!-- language -->
                    <li class="dropdown notifications-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-language"></i>
                            <span class="label label-warning"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu">
                                    <li>
                                        <a href="@Url.Action("VietNam_FingerM2","Home")">
                                            <i class="fa fa-star text-black"></i> @Language.label("VietNam")
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("English_FingerM2","Home")">
                                            <i class="fa fa-plus text-black"></i> @Language.label("English")
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Germany_FingerM2","Home")">
                                            <i class="fa fa-navicon  text-black"></i> @Language.label("Germany")
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="~/Content/adminlte/dist/img/logo.jpg" class="user-image" alt="User Image">
                            <span class="hidden-xs">@User.Identity.GetUserName()</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="~/Content/adminlte/dist/img/logo.jpg" class="img-circle" alt="User Image">
                                <p>
                                    @User.Identity.GetUserName()
                                    <small>@Language.label("Profile")</small>
                                </p>
                            </li>
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="row">
                                    <div class="col-xs-4 text-center">
                                        <a href="#">@Language.label("Followers")</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">@Language.label("Friends")</a>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    @*<a href="@Url.Action("Index","Manage")" class="btn btn-default btn-flat">@Language.label("Setting")</a>*@
                                </div>
                                <div class="pull-right">
                                    @{
                                        using (Html.BeginForm("LogOff_FingerM2", "Account", FormMethod.Post, new { id = "logoutForm_FingerM1" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <a href="javascript:document.getElementById('logoutForm_FingerM1').submit()" class="btn btn-default btn-flat">@Language.label("Logoff")</a>
                                        }
                                    }
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                    <li>
                        <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>