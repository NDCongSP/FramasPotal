@using FramasVietNam.Common
@{
    ViewData["Title"] = "FVN";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var lstMaterial = (List<FramasVietNam.Models.Meal.Material>)ViewBag.lstMaterial;
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                alert("@Html.Raw(ViewBag.Message)");
            };
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="fa fa-fw fa-mail-reply" href="@Url.Action("Index","Function")"></a>
            @Language.label("Material")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @Language.label("Function")</a></li>
            <li class="active">@Language.label("Material")</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="min-height:906px; margin:2px">
            <div class="row">
                <div class="col-lg-3 col-xs-6">
                    <div style="margin-bottom:10px">
                        @Html.ActionLinkRole("Add", "Material", "MealControlCanteen", Language.label("Add"), "MaterialAdd", "MealControlCanteen", new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
            <!-- TO DO List -->
            <div class="box box-primary">
                <div class="box-header">
                    <i class="ion ion-clipboard"></i>
                    <h3 class="box-title">@Language.label("List") @Language.label("Material")</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("MaterialSave", "MealControlCanteen", FormMethod.Post))
                    {
                        <table id="Material" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="width:27px;">@Language.label("Num")</th>
                                    <th>@Language.label("Code")</th>
                                    <th>@Language.label("Name")</th>
                                    <th>@Language.label("Description")</th>
                                    <th>@Language.label("Change")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (lstMaterial != null)
                                {
                                    int i = 1;
                                    foreach (var item in lstMaterial)
                                    {
                                        <tr>
                                            <td class="text">@i</td>
                                            <td class="text">@item.Code</td>
                                            <td class="text">@item.Name</td>
                                            <td class="text">@item.Description</td>
                                            <!-- General tools such as edit or delete-->
                                            <td>
                                                @Html.ActionLinkRole("Edit", "Material", "MealControlCanteen", " ", "MaterialEdit/" + item.ID, "MealControlCanteen", new { @class = "fa fa-edit label-primary btn-sm" })
                                                @Html.ActionLinkRole("Delete", "Material", "MealControlCanteen", " ", "MaterialDel/" + item.ID, "MealControlCanteen", new { @class = "fa fa-trash label-danger btn-sm", @onclick = "return confirm('" + Language.label("AreYouSure") + "')" })
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>

                    }
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </section>
    <!-- /.content -->
</div>


@section scripts{
<script>
    $(document).ready(function () {
        $('#Material thead tr').clone(true).appendTo('#Material thead');
        $('#Material thead tr:eq(1) th').each(function (i) {
            if (i > 0) {
                var title = $(this).text();
                // Ngoài cột Num sẽ có thêm cột Status sẽ không có cột tìm kiếm
                if (title != "Status" && title != "Change") {
                    $(this).html('<input type="text"/>');
                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                }
                else {
                    $(this).html('');
                }
            }
        });

        var table = $('#Material').DataTable({
            "displayLength": 25,
            orderCellsTop: true,
            fixedHeader: true,
            'paging': true,
            'lengthChange': false,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false
        });

        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    });
</script>}

